{
    "manifest_version": 2,
    "name": "Tech Ops Canvas Search Improvements",
    "version": "0.5.0",
    "options_page": "views/options.html",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.instructure.com/accounts/*"
            ],
            "js": [
                "scripts/crossList.js"
            ]
        },
        {
            "matches": [
                "https://*.instructure.com/courses/*"
            ],
            "js": [
                "scripts/breadcrumbs.js",
                "scripts/enableFixedLeftNav.js"
            ]
        },
        {
            "matches": [
                "https://*.instructure.com/courses/*"
            ],
            "js": [
                "scripts/lock.js"
            ]
        },
        {
            "matches": [
                "https://*.instructure.com/*/modules"
            ],
            "js": [
                "scripts/navToModule.js"
            ]
        }
    ]
}
